<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.co.voyagegroup.fluct.sample"
    android:versionCode="1"
    android:versionName="1.0.0">

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="15"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <meta-data android:name="FLUCT_MEDIA_ID" android:value="SET_YOUR_MEDIA_ID"/>
        <meta-data android:name="FLUCT_MEDIA_ID_FOR_INTERSTITIAL" android:value="SET_YOUR_MEDIA_ID_FOR_INTERSTITIAL"/>
        <activity
            android:name=".FluctSample"
            android:label="@string/title_activity_fluct_sample">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="jp.co.voyagegroup.android.fluct.jar.FluctInterstitialActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:launchMode="singleTask"
            />
    </application>

</manifest>